{{!-- 控制編距樣式 --}}
<div class="margin-wrapper">

  {{!-- 實作頁籤 --}}
  {{> field-tabs route = "index"}}

  {{!-- 加上 categories 分類 --}}
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
    </li>
    {{#each categories}}
    <li class="nav-item">
      <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
        href="?categoryId={{this.id}}">{{this.name}}</a>
    </li>
    {{/each}}
  </ul>


  {{!-- 案場列表 --}}
  <div class="row mt-3">
    {{#if fields}}
    {{#each fields}}
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
      <div class="card mb-4 shadow-sm">
        <a href="/fields/{{this.id}}">
          <img class="card-img-top img-fluid" src="{{this.cover}}" alt="Card image cap"
            style="transition: opacity 0.5s; opacity:0; width:100%; height:180px; object-fit:cover;"
            onload="this.style.opacity=1;">
        </a>
        <div class="card-body">
          <p class="card-text">
            <span class="badge bg-secondary">{{this.Category.name}}</span>
          <div class="mt-0 text-container">
            <a href="/fields/{{this.id}}">{{this.name}}</a>
          </div>
          </p>

          {{!-- 加入收藏功能 --}}
          {{!-- 加入是否收藏的條件判斷式 --}}
          <div>{{> field-favorite-button}}</div>
        </div>
      </div>
    </div>
    {{/each}}

    {{else}}
    <h6 class="mt-3 ms-3">此分類尚無案場...</h6>
    {{/if}}
  </div>

  {{!-- 加上 pagination 分頁器 --}}
  {{>pagination}}

</div>