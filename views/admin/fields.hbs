{{!-- 餐廳後台 --}}
{{> admin-tabs route = 'fields'}}

{{!-- 加上 categories 分類 --}}
<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
  </li>
  {{#each categories}}
  <li class="nav-item">
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
      href="?categoryId={{this.id}}">{{this.name}}</a>
  </li>
  {{/each}}
</ul>

<a href='/admin/fields/create'>
  <button type="button" class="btn btn-primary mt-4">New Field</button>
</a>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr class="table-dark">
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each fields}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.Category.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/fields/{{this.id}}">
            Show
          </a>
        </button>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/fields/{{this.id}}/edit">
            Edit
          </a>
        </button>
        <form action="/admin/fields/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除{{this.name}}嗎?`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- 加上 pagination 分頁器 --}}
<nav class="mt-3" aria-label="page navigation">
  <ul class="pagination">
    {{!-- 上一頁: 如果在第1頁, 則disable掉上一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="/admin/fields?page={{pagination.prev}}&categoryId={{categoryId}}"
        aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/admin/fields?page={{this}}&categoryId={{../categoryId}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    {{!-- 下一頁: 如果在第末頁, 則disable掉下一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/admin/fields?page={{pagination.next}}&categoryId={{categoryId}}"
        aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>