{{!-- 加上 pagination 分頁器 --}}
<nav class="mt-3 d-flex justify-content-center" aria-label="page navigation">
  <ul class="pagination">
    {{!-- 上一頁: 如果在第1頁, 則disable掉上一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="{{isSearched}}?page={{pagination.prev}}&categoryId={{categoryId}}&keyword={{keyword}}"
        aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link"
        href="{{../isSearched}}?page={{this}}&categoryId={{../categoryId}}&keyword={{../keyword}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    {{!-- 下一頁: 如果在第末頁, 則disable掉下一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="{{isSearched}}?page={{pagination.next}}&categoryId={{categoryId}}&keyword={{keyword}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>