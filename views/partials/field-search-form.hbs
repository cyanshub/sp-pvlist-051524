{{!-- 控制是否要顯示搜尋表單 --}}
{{#if isSearched}}
  {{!-- 搜尋表單 --}}
  <div class="search-bar me-5">
    <div class="search-bar-inner">
      {{!-- 利用 isSearched 決定要搜尋對應哪個路頁面 --}}
      <form action="{{isSearched}}?categoryId={{categoryId}}&keyword={{keyword}}" id="search-form">
        <div class="input-group">

          {{!-- 記住類別資訊 --}}
          <input type="hidden" name="categoryId" value="{{categoryId}}"/>

          {{!-- 發送搜尋關鍵字 --}}
          <input type="text" id="search-input" class="form-control" name="keyword" value="{{keyword}}" 
          {{#if find}}
          {{else}}
          placeholder="輸入關鍵字" aria-label="輸入關鍵字"         
          {{/if}}
          
          {{#ifCond find 'fields'}}
          placeholder="輸入案場名稱、地址" aria-label="案場名稱、地址"         
          {{/ifCond}}

          {{#ifCond find 'users'}}
          placeholder="輸入使用者名稱、帳號" aria-label="使用者名稱、帳號"         
          {{/ifCond}}
          
          aria-label="Field Name">
          <button id="search-button" class="btn btn-outline-light" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
{{/if}}