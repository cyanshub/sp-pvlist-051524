{{!-- 當總頁數>1時顯示頁碼器, 否則隱藏 --}}
{{#ifLarger pagination.totalPage 1}}

{{!-- 加上 pagination 分頁器 --}}
<nav class="mt-3 d-flex justify-content-center" aria-label="page navigation">
  <ul class="pagination">
    {{!-- 上一頁: 如果在第1頁, 則disable掉上一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="{{isSearched}}?page={{pagination.prev}}&categoryId={{categoryId}}&keyword={{keyword}}"
        aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    <!-- 前面幾頁 -->
    {{#each pagination.initialPages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link"
        href="{{../isSearched}}?page={{this}}&categoryId={{../categoryId}}&keyword={{../keyword}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    
    <!-- 前面幾頁後的省略 -->
    {{#if pagination.hasPrevEllipsis}}
    <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
    {{/if}}
    
    <!-- 中間頁碼 -->
    {{#each pagination.visiblePages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link"
        href="{{../isSearched}}?page={{this}}&categoryId={{../categoryId}}&keyword={{../keyword}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    
    <!-- 最後幾頁前的省略 -->
    {{#if pagination.hasNextEllipsis}}
    <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
    {{/if}}
    
    <!-- 最後幾頁 -->
    {{#each pagination.finalPages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link"
        href="{{../isSearched}}?page={{this}}&categoryId={{../categoryId}}&keyword={{../keyword}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}

    {{!-- 下一頁: 如果在第末頁, 則disable掉下一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="{{isSearched}}?page={{pagination.next}}&categoryId={{categoryId}}&keyword={{keyword}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>

{{!-- 直接輸入頁碼控制項 --}}
<div class="d-flex justify-content-center">
  <form class="d-flex align-items-center" action="{{../isSearched}}" method="get" style="display: inline;">
    <label class="me-2" for="page">預計前往第</label>
    <input type="number" id="page" name="page" value="{{pagination.currentPage}}" min="1" max="{{pagination.totalPage}}" style="max-width: 2.5rem; text-align: center;">
    <input type="hidden" name="categoryId" {{#if categoryId}} value={{categoryId}} {{/if}} />
    <input type="hidden" name="keyword" {{#if keyword}} value={{keyword}} {{/if}}>
    <label class="ms-2" for="page">頁</label>
    <button class="btn btn-outline-white btn-color btn-sm ms-2" style="padding: 0.2rem 0.3rem;" type="submit">GO</button>
  </form>
</div>
{{else}}
{{/ifLarger}}
