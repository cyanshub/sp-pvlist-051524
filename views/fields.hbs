{{!-- 實作頁籤 --}}
{{> field-tabs route = "index"}}

{{!-- 加上 categories 分類 --}}
<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
  </li>
  {{#each categories}}
  <li class="nav-item">
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
      href="?categoryId={{this.id}}">{{this.name}}</a>
  </li>
  {{/each}}
</ul>

{{!-- 案場列表 --}}
<div class="row mt-3">
  {{#each fields}}
  <div class="col-md-3">
    <div class="card mb-4 shadow-sm">
      <a href="/fields/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.cover}}" alt="Card image cap"
          style="transition: opacity 0.5s; opacity:0; width:286px; height:180px; object-fit:cover;"
          onload="this.style.opacity=1;">
      </a>
      <div class="card-body">
        <p class="card-text">
          <span class="badge bg-secondary">{{this.Category.name}}</span>
        <div class="mt-0 text-container">
          <a href="/fields/{{this.id}}">{{this.name}}</a>
        </div>
        </p>

        {{!-- 加入收藏功能 --}}
        {{!-- 加入是否收藏的條件判斷式 --}}
        <div>
          {{#if isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger m-1">移除收藏</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST">
            <button type="submit" class="btn btn-primary m-1">加入最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{!-- 加上 pagination 分頁器 --}}
<nav class="mt-3 d-flex justify-content-center" aria-label="page navigation">
  <ul class="pagination">
    {{!-- 上一頁: 如果在第1頁, 則disable掉上一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="/fields?page={{pagination.prev}}&categoryId={{categoryId}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/fields?page={{this}}&categoryId={{../categoryId}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    {{!-- 下一頁: 如果在第末頁, 則disable掉下一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/fields?page={{pagination.next}}&categoryId={{categoryId}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>